{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "logs"]
}
